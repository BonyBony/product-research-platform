# Demo Mode - Set to True to use mock data (no API keys required)
DEMO_MODE=True

# Anthropic API Key (required for pain point extraction and persona generation)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Data Source API Keys (at least one required when DEMO_MODE=False)
# YouTube Data API v3 (https://console.cloud.google.com/apis/credentials)
YOUTUBE_API_KEY=your_youtube_api_key_here

# Reddit API (https://www.reddit.com/prefs/apps)
REDDIT_CLIENT_ID=your_reddit_client_id_here
REDDIT_CLIENT_SECRET=your_reddit_client_secret_here
REDDIT_USER_AGENT=ResearchAI/0.1.0

# Product Hunt API (https://www.producthunt.com/v2/oauth/applications)
PRODUCTHUNT_API_TOKEN=your_producthunt_token_here

# Hacker News - No API key needed! Uses free Algolia HN Search API

# FastAPI Settings
DEBUG=True
